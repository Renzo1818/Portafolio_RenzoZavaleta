@{
    Layout = "~/Views/Shared/Layouts/Layout_Cliente.cshtml";
}
@model BIBLIOTECA_VIRTUAL.Models.ConsolidadoLibro
@{
    string rutaImagenRelativa = @Model.RutaImagen;
    rutaImagenRelativa = rutaImagenRelativa.Replace("~\\", "~/").Replace("\\", "/");
}
<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container" style="margin-top: 20px;">
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@Url.Content(rutaImagenRelativa)" alt="Imagen del catálogo" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h1 class="card-title">@Model.Titulo</h1>
                            <h5 class="card-subtitle mb-2 text-muted">@Model.Autor</h5>
                            <p class="card-text">@Model.Sinopsis</p>
                            <p class="card-text">Fecha de publicación: @Model.FechaPublicacion.ToShortDateString()</p>
                            <div class="card-text">
                                <span class="badge bg-primary">@Model.Categoria</span>
                            </div>
                        </div>
                     <form asp-controller="TemporalPrestamo" asp-action="AgregarCarrito" method="post">
                        <input type="hidden" name="codLibro" value="@Model.IdLibro" />
                        <input type="hidden" name="txtTitulo" value="@Model.Titulo" />
                        <input type="hidden" name="txtAutor" value="@Model.Autor" />
                        <input type="hidden" name="txtEditorial" value="@Model.Editorial" />
                        <input type="hidden" name="txtCategoria" value="@Model.Categoria" />
                        <input type="submit"  class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" value="Reservar" />
                    </form>
                    </div>
                </div>
            </div>
        </div>
        
    </body>
</html>