@{
    Layout = "~/Views/Shared/Layouts/Layout_Libro.cshtml";
}
@model IEnumerable<BIBLIOTECA_VIRTUAL.Models.ConsolidadoLibro>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <LINK REL=StyleSheet HREF="~/css/TablaLibros.css" TYPE="text/css" MEDIA=screen>
    <style>
        .table-bordered tr,.table-bordered td{
            border: 2px solid #000;
        }

            .table-bordered tr,
            .table-bordered td {
                border: 2px solid #000;
            }

        
        .table-bordered td,
        .table-bordered th {
            border: 2px solid #000;
            position: relative;
        }

            .table-bordered td::before,
            .table-bordered th::before {
                content: "";
                position: absolute;
                left: -2px;
                top: 0;
                bottom: 0;
                width: 2px;
                background-color: #000;
            }
    
    </style>
</head>
<body>
    <h1><strong>PANEL EDITAR Y ELIMINAR LIBROS</strong></h1>
    <table class="table table-bordered">
        <tr>
            <td><strong>Codigo</strong></td>
            <td><strong>Titulo</strong></td>
            <td><strong>Categoria</strong></td>
            <td><strong>Autor</strong></td>
            <td><strong>Editorial</strong></td>
            <td><strong>Stock</strong></td>
            <td><strong>Cantidad</strong></td>
            <td><strong>Fecha de publicacion</strong></td>
            <td><strong>Accion editar</strong></td>
            <td><strong>Accion eliminar</strong></td>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdLibro</td>
                    <td>@item.Titulo</td>
                    <td>@item.Categoria</td>
                    <td>@item.Autor</td>
                    <td>@item.Editorial</td>
                    <td>@item.Stock</td>
                    <td>@item.Cantidad</td>
                    <td>@item.FechaPublicacion.ToShortDateString()</td>
                    <td>
                        <div class="form-group">
                            <a asp-controller="Registro_Libro_Editorial" asp-action="FormularioModificar" asp-route-id="@item.IdLibro" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Editar</a>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <a asp-controller="Registro_Libro_Editorial" asp-action="EliminarRegistro" asp-route-id="@item.IdLibro" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (TempData["Mensaje"] != null)
    {
        <script>
            window.onload = function () {
                alert("@TempData["Mensaje"]");
            };
        </script>
    }
</body>
</html>