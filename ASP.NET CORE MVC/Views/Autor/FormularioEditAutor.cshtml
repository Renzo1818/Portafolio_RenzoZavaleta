@{
    Layout = "~/Views/Shared/Layouts/Layout_Autor.cshtml";
}
@model IEnumerable<BIBLIOTECA_VIRTUAL.Models.Autor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <LINK REL=StyleSheet HREF="~/css/TablaLibros.css" TYPE="text/css" MEDIA=screen>
    <style>
        .table-bordered tr, .table-bordered td {
            border: 2px solid #000;
        }

        .table-bordered tr,
        .table-bordered td {
            border: 2px solid #000;
        }


        .table-bordered td,
        .table-bordered th {
            border: 2px solid #000;
            position: relative;
        }

            .table-bordered td::before,
            .table-bordered th::before {
                content: "";
                position: absolute;
                left: -2px;
                top: 0;
                bottom: 0;
                width: 2px;
                background-color: #000;
            }
    </style>
    </head>
    <body>
        <h1 >PANEL EDITAR Y ELIMINAR AUTOR</h1>
        <table class="table table-bordered">
            <tr>
            <td><strong>Codigo</strong></td>
            <td><strong>Nombre y Apellidos</strong></td>
            <td><strong>Fecha Nacimiento</strong></td>
            <td><strong>Nacionalidad</strong></td>
            <td><strong>Accion editar</strong></td>
            <td><strong>Accion eliminar</strong></td>
            </tr>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdAutor</td>
                        <td>@item.NombreApellido</td>
                        <td>@item.FechaNacimiento.ToShortDateString()</td>
                        <td>@item.Nacionalidad</td>
                        <td>
                            <div class="form-group">
                                <a asp-controller="Autor" asp-action="FormularioModificar" asp-route-id="@item.IdAutor" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Editar</a>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <a asp-controller="Autor" asp-action="EliminarAutor" asp-route-id="@item.IdAutor" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
        </table>
        @if (TempData["Mensaje"] != null)
            {
                <script>
                    window.onload = function() {
                        alert("@TempData["Mensaje"]");
                    };
                </script>
            }
    </body>
</html>